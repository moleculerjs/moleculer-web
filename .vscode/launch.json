	"version": "0.2.0",
	"configurations": [

		{
			"type": "node",
			"request": "launch",
			"name": "Launch demo",
			"program": "${workspaceRoot}\\examples\\index.js",
			"cwd": "${workspaceRoot}",
			"env": {
				"PORT": "4000"
			},
			"args": [
				"simple"
			]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Jest",
			"program": "${workspaceRoot}\\node_modules\\jest-cli\\bin\\jest.js",
			"args": ["--runInBand"],
			"cwd": "${workspaceRoot}",
			"console": "internalConsole",
			"runtimeArgs": [
                "--nolazy"
            ]
		}
	]
}
